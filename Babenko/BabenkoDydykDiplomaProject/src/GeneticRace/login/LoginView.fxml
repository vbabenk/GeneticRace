<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="300.0" style="-fx-background-color: WHITE;"
            xmlns="http://javafx.GeneticRace/javafx/8.0.121" xmlns:fx="http://javafx.GeneticRace/fxml/1"
            fx:controller="GeneticRace.login.LoginController">
    <Button fx:id="loginBtn" layoutX="85.0" layoutY="157.0" mnemonicParsing="false" onAction="#logIn"
            text="Увійти в систему">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </Button>
    <TextField fx:id="usernameField" layoutX="69.0" layoutY="55.0" prefHeight="25.0" prefWidth="162.0"
               promptText="Введіть логін ">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </TextField>
    <PasswordField fx:id="passwordField" layoutX="69.0" layoutY="105.0" prefHeight="25.0" prefWidth="162.0"
                   promptText="Введіть пароль">
        <font>
            <Font name="Arial" size="14.0"/>
        </font>
    </PasswordField>
</AnchorPane>
